
let number = parseInt(prompt("Enter a number: "));

if(number > 0){
  for(let i = 1 ; i<=15 ; i++){
     console.log(number*i);
  }
}

FROM 1 TO 15


function multiplicationTable(){
  for (let i = 1 ; i<=15 ; i++){
    console.log(`Multiplication table of ${i}`);
    for (let j= 1 ; j<=10 ; j++){
      console.log(i*j);
    }
    console.log(" ")
  }
}
multiplicationTable()
